<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/bootstrap') %>
    <title>Edit Form</title>
</head>
<body>
    <section style="max-width: 70%; margin: 0 auto;">
        <%- include('partials/navbarAdmin') %>
        <form action="/book/edit/<%= data.id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Title :</label>
                <input type="text" class="form-control" name="title"  value="<%= data.title %> ">
              </div>
              <div class="form-group">
                  <label>Author :</label>
                  <input type="text" class="form-control" name="author"  value="<%= data.author %> ">
              </div>
              <div class="form-group">
                  <label>Price :</label>
                  <input type="text" class="form-control" name="price"  value="<%= data.price %> ">
              </div>
              <div class="form-group">
                <label>Category :</label>
                <select class="form-control" name="categori">
                  <option value="fiksi" name="categori" id="fiksi">Fiksi</option>
                  <option value="nonfiksi" name="categori" id="nonfiksi">Non fiksi</option>
                </select>
              </div>
              <div class="form-group">
                <label for="image">Image: </label>
                <input class="form-control-file" type="file" id="image" name="image">
              </div>
            <br><button type="submit" class="btn btn-primary">update</button>
            <br><a href="/bookAdmin">cancel</a>
          </form>
    </section>
</body>
<foot>
    <%- include('partials/footer') %>
</foot>
</html>