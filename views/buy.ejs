<html>
    <head>
        <%- include('partials/bootstrap') %>
        <title>Home</title>
        <style>
            .book-title {
                font-weight: bold;
            }

            .book-price {
                color: #f90f36;
                font-weight: bold;
            }
        </style>
    </head>
    <body>
        <%- include('partials/navbar') %>
        <div class="container">
            <div class="mb-4">
                <h1>Beli Buku</h1>
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img src="<%= book.image %>" class="img-fluid" alt="book image">
                    </div>
                    <div class="col-md-8">
                        <h1 class="book-title"><%= book.title %></h1>
                        <h2 class="book-author"><%= book.author %></h2>
                        <h3 class="book-price"><%= toIndonesianRupiah(book.price) %></h3>
                        <form class="my-5" action="" method="POST">
                            <div class="form-group row">
                                <label class="col-sm-1 col-form-label" for="amount">Jumlah: </label>
                                <div class="col-sm-11">
                                    <input class="form-control" type="number" name="amount" id="amount" placeholder="Jumlah" value="1" min="1" max="99">
                                </div>
                            </div>
                            <input class="btn btn-lg btn-primary" type="submit" value="beli">
                        </form>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="book-item p-3 my-3 text-center">
                    </div>
                </div>
            </div>
        </div>
    </body>
    <foot>
        <%- include('partials/footer') %>
    </foot>
</html>